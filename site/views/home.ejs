<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head',{title: 'TiendArgenta'}) %>
  
  <body class="home">
    <%- include('./partials/header') %>
    <main>
      <!--OFERTAS-->
      <h1>NUEVOS INGRESOS</h1>
      <section class="nuevos">
        
        <% nuevosProductos.forEach(producto => { %>
          <article class="ofertas">
            <a href="/productos/detalles/<%= producto.id %>">
              <div class="imgBox">
                <img src="/images/productos/<%= producto.imagen %>" alt="<%= producto.titulo %>" class="itemOferta">
              </div>
              <div class="DatosBox">
                <h4><%= producto.titulo %></h4>
                <% if (producto.descuento !== 0) { %>
                  <div class="descard">
                    <small >$<%= producto.precio %></small>
                    <h4><%= producto.descuento %>%</h4>
                  </div>
                  <% } %>
                <h2 class="price">$<%= producto.precio - (producto.precio * producto.descuento / 100)%><small>,00</small></h2>
                <a href="/productos/carrito" class="comprar">Comprar</a>
              </div>
              </a>
          </article>
        <% }) %>
      </section>
      <!--CARROUSEL-->
      <div class="contenedor-all">
        <input type="radio" name="imagen-slide" id="1" hidden>
        <input type="radio" name="imagen-slide" id="2" hidden>
        <input type="radio" name="imagen-slide" id="3" hidden>
        <input type="radio" name="imagen-slide" id="4" hidden>
      <div class="slide">
        <div class="img-slide">
          <img src="/images/home/carrousel/BANNER-1.gif" alt="">
        </div>
        <div class="img-slide">
          <img src="/images/home/carrousel/BANNER-2.gif" alt="">
        </div>
        <div class="img-slide">
          <img src="/images/home/carrousel/BANNER-3.gif" alt="">
        </div>
        <div class="img-slide">
          <img src="/images/home/carrousel/BANNER-4.gif" alt="">
        </div>
      </div>
    </div>
      <!--CATEGORIAS-->
      <h1>CONOCÃ‰ TODOS NUESTROS PRODUCTOS</h1>
      <section class="cards">
        <article class="card card1">
          <div class="contenedor">
            <a href="/indumentaria"><img src="/images/productos/H-Messi.png" alt="Camiseta hombre"/></a>
          </div>
          <div class="nombre">
            <h2>INDUMENTARIA</h2>
          </div>
        </article>
        <article class="card card2">
          <div class="contenedor">
            <a href="/cotillon"><img src="/images/productos/Combo-Fan.png" alt="promos"/></a></div>
          <div class="nombre">
            <h2>COTILLON</h2>
          </div>
        </article>
        <article class="card card3">
          <div class="contenedor">
            <a href="/novedades"><img src="/images/productos/Inf-manta.png" alt="novedades"/></a>
          </div>
          <div class="nombre">
            <h2>NOVEDADES</h2>
          </div>
        </article>
        <article class="card card4">
          <div class="contenedor">
            <a href="/coleccionables"><img src="/images/productos/Col-Messi.png" alt="impresiones 3d"/></a>
          </div>
          <div class="nombre">
            <h2>COLECCIONABLES</h2>
          </div>
        </article>
      </section>
    </main>
    <!--FOOTER-->
    <%- include('./partials/footer') %>
  </body>
</html>
